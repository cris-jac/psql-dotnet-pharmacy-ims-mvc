@model LoginViewModel

@{
    Layout = "_AuthLayout";
}

<div class="col-lg-6 col-md-8 col-xs-10 border border-dark p-5 bg-light rounded-3 d-flex flex-column gap-2">

    <h3 class="text-center">Iniciar sesion</h3>
    <hr>

    @if (ViewData.ModelState.IsValid && ViewData.ModelState.Keys.Any(k => k.Contains("Password")))
    {
        <div class="alert alert-danger" role="alert">
            <p>No se pudo registrar esta cuenta. Verifique sus datos</p>
        </div>
    }

    <form method="post" asp-controller="account" asp-action="login">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" asp-validation-summary="All"></div>
        }

        <div class="my-4">
            <div class="row mb-1 col-12 mx-auto align-items-center">
                <div class="col-md-3 col-sm-4">
                    <label asp-for="Email" class="col-form-label text-end">Email</label>
                </div>
                <div class="col-md-9 col-sm-8">
                    <input type="text" asp-for="Email" class="form-control border-dark">
                </div>
            </div>
            <div class="col-12 mx-2 row">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="my-4">
            <div class="row mb-1 col-12 mx-auto align-items-center">
                <div class="col-md-3 col-sm-4">
                    <label asp-for="Password" class="col-form-label text-start">Contrase√±a</label>
                </div>
                <div class="col-md-9 col-sm-8">
                    <input type="password" asp-for="Password" class="form-control border-dark">
                </div>
            </div>
            <div class="col-12 mx-2 row">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="row mt-5 justify-content-between gap-2">
            <div class="col d-flex justify-content-center">
                <button type="submit" class="btn btn-dark rounded-pill pill-button-200">
                    <span>Iniciar sesion</span>
                </button>
            </div>
        </div>

        <p class="pt-4 mb-0 text-end small">Si todavia no estas registrado, <a asp-action="register">crea tu cuenta</a>
        </p>
    </form>

</div>