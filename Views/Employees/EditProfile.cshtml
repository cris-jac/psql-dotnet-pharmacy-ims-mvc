@model EditUserViewModel

@section title {
    <h3 class="my-4">Editar perfil</h3>
    <hr class="my-2">
}

<div class="d-flex flex-column col-10 mx-auto">
    <form method="post" asp-controller="employees" asp-action="editprofile">

        <div class="text-danger m-2 px-2" asp-validation-summary="All"></div>


        <div class="my-4">
            <div class="row mb-1 col-12 mx-auto">
                <div class="col-lg-2 col-md-3 col-sm-4">
                    <label asp-for="FirstName" class="col-form-label">Nombre</label>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-8">
                    <input type="text" asp-for="FirstName" class="form-control">
                </div>
            </div>
            <div>
                <span class="text-danger" asp-validation-for="FirstName"></span>
            </div>
        </div>

        <div class="my-4">
            <div class="row mb-1 col-12 mx-auto">
                <div class="col-lg-2 col-md-3 col-sm-4">
                    <label asp-for="LastName" class="col-form-label">Apellido</label>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-8">
                    <input type="text" asp-for="LastName" class="form-control">
                </div>
            </div>
            <div>
                <span class="text-danger" asp-validation-for="LastName"></span>
            </div>
        </div>

        <div class="my-4">
            <div class="row mb-1 col-12 mx-auto">
                <div class="col-lg-2 col-md-3 col-sm-4">
                    <label asp-for="DocumentType" class="col-form-label">Tipo de documento</label>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-8">
                    <input type="text" asp-for="DocumentType" class="form-control">
                </div>
            </div>
            <div>
                <span class="text-danger" asp-validation-for="DocumentType"></span>
            </div>
        </div>

        <div class="my-4">
            <div class="row mb-1 col-12 mx-auto">
                <div class="col-lg-2 col-md-3 col-sm-4">
                    <label asp-for="DocumentNumber" class="col-form-label">Numero de documento</label>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-8">
                    <input type="text" asp-for="DocumentNumber" class="form-control">
                </div>
            </div>
            <div>
                <span class="text-danger" asp-validation-for="DocumentNumber"></span>
            </div>
        </div>

        <div class="my-4">
            <div class="row mb-1 col-12 mx-auto">
                <div class="col-lg-2 col-md-3 col-sm-4">
                    <label asp-for="UserName" class="col-form-label">Nombre de usuario</label>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-8">
                    <input type="text" asp-for="UserName" class="form-control">
                </div>
            </div>
            <div>
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
        </div>

        <div class="my-4">
            <div class="row mb-1 col-12 mx-auto">
                <div class="col-lg-2 col-md-3 col-sm-4">
                    <label asp-for="Email" class="col-form-label">Email</label>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-8">
                    <input type="text" asp-for="Email" class="form-control">
                </div>
            </div>
            <div>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="my-4">
            <div class="row mb-1 col-12 mx-auto">
                <div class="col-lg-2 col-md-3 col-sm-4">
                    <label asp-for="Phone" class="col-form-label">Telefono de contacto</label>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-8">
                    <input type="text" asp-for="Phone" class="form-control">
                </div>
            </div>
            <div>
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
        </div>

        <div class="my-4">
            <div class="row mb-1 col-12 mx-auto">
                <div class="col-lg-2 col-md-3 col-sm-4">
                    <label asp-for="PictureUrl" class="col-form-label">URL de Image de perfil</label>
                </div>
                <div class="col-lg-10 col-md-9 col-sm-8">
                    <input type="text" asp-for="PictureUrl" class="form-control">
                </div>
            </div>
            <div>
                <span class="text-danger" asp-validation-for="PictureUrl"></span>
            </div>
        </div>


        <div class="row mt-5 justify-content-between gap-2">
            <div class="col d-flex justify-content-center">
                <button type="submit" class="btn btn-primary rounded-pill" style="width: 120px;">
                    <i class="bi bi-check-circle"></i>
                    <span style="margin-left: 8px; fs-6">Guardar</span>
                </button>
            </div>

            <div class="col d-flex justify-content-center">
                <a asp-controller="employees" asp-action="details" asp-route-id="Id" type="button"
                    class="btn btn-danger rounded-pill" style="width: 120px;">
                    <i class="bi bi-x-circle"></i>
                    <span style="margin-left: 8px; fs-6">Cancelar</span>
                </a>
            </div>
        </div>
    </form>
</div>