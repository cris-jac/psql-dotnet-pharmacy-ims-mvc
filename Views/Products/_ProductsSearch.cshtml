@model IEnumerable<Product>

@if (Model != null && Model.Count() > 0)
{
    <table class="table small table-sm table-hover table-bordered ">
        <thead>
            <tr>
                <th>Name</th>
                <th class="d-none d-md-table-cell ">SKU</th>
                <th>Price</th>
                <th>Stock</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model)
            {
                <tr class="product-row" product-id="@product.Id">
                    <td>@product.Name</td>
                    <td class="d-none d-md-table-cell ">@product.SKU</td>
                    <td class="text-left">@product.Price.ToString("N2")</td>
                    <td class="text-center">@product.Stock</td>
                </tr>
            }
        </tbody>
    </table>
}